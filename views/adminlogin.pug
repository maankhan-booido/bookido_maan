    .navbar-default .navbar-nav>li:hover a{
    color: #FFC34C;
    border-bottom: 2px solid #FFC34C;
    }
    .navbar-toggle {
    /* margin:10px 0;  */
    background:#fff;
    color:#FFC34C;
    }
    .child{
    position: relative;
    bottom: 2vw;
    }
    .navbar-nav > li{
    padding-left:19px;
    padding-right:15px;
