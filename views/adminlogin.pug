include ./navbar
// sign in form begins
.container
  .d-flex.justify-content-center.h-100
    .card
      .card-header
        h3 Admin
        .d-flex.justify-content-end.social_icon
          span
            i.fab.fa-facebook-square
          span
            i.fab.fa-google-plus-square
      .card-body
        form(method='POST' action='/authorizeadmin')
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-user
            input.form-control(type='text' required='' placeholder='username' name='name' )
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-key
            input.form-control(type='password' required='' placeholder='password' name='password')
          .form-group
            input.btn.float-right.login_btn(type='submit' value='Login')

