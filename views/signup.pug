.container
  .d-flex.justify-content-center.h-100
    .card
      .card-header
        h3 Sign Up
      .card-body
        form(method='POST' action='/welcome')
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-user
            input.form-control(type='text' required='' placeholder='username' name='name')
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-envelope
            input.form-control(type='email' required='' placeholder='email' name='email')
          .input-group.form-group
            .input-group-prepend
              span.input-group-text
                i.fas.fa-key
            input#password.form-control(type='password' required='' placeholder='password' name='password' )
          .form-group
            input.btn.float-right.login_btn(type='submit' value='Sign up' onclick='return validate()')
      .card-footer
        .d-flex.justify-content-center.links
          | Already have an account?
          a(href='/signin')
            b Sign In
script(type='text/javascript').
  function validate(){
  var password= document.getElementById('password').value;
  console.log(password);
  //checking the number of each type of character i.e. Capital and small Alphabets, digits & special characters
  var digits = (password.match(/\\d/g) || []).length; // determine the number of digits in password
  var capitals = (password.match(/[A-Z]/g) || []).length;// determine the number of capital letters in password
  var specials = (password.match(/[!@#$%^&*()_+=]/g) || []).length;// determine the number of specials in password
  var smalls = (password.match(/[a-z]/g) || []).length;// determine the number of small letters in password
  if (password.length<6) {
  alert('Your password is too weak. Please enter at least 6 characters');
  return false;
  }
  else if (specials<2) {
  alert('Your password is weak. Please use at least 2 special characters in your password');
  return false;
  }
  else if(capitals<1){
  alert('Please enter at least one uppercase alphabet in your password');
  return false;
  }
  }


